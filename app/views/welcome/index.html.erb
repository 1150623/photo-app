
<% if current_user %>
  <h1> Welcome to the Photo App,</h1>
  <h3> <%="#{current_user.email}"%></h3>
<% else %>
  <div class = "jumbotron">
    <h2> Welcome to this Photo Management App </h2>
    <p class = "lead">
      You'll love managing yout photos with our application. Sign Up now!
    </p>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-3 col-md-offset-2">

        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Silver Plan</h3>
          </div>
          <div class="panel-body">
            <div class="the-price">
                <h1>$10<span class="subscript">/mo</span></h1>
            </div>
            <table class="table">
              <tr>
                <td>Unlimited Imgae Uploads</td>
              </tr>
              <tr class="active">
                <td>Responsive Design</td>
              </tr>
              <tr class="active">
                <td>Access Anywhere</td>
              </tr>
            </table>
          </div>
          <div class="panel-footer">
            <%= link_to  "Sign Up", new_user_registration_path, class: 'btn btn-primary sign-up' %>
          </div>
        </div> <!-- panel -->
      </div> <!-- col -->

     <div class="col-xs-12 col-md-3 col-md-offset-1">
      <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Gold Plan</h3>
          </div>
          <div class="panel-body">
            <div class="the-price">
                <h1>$20<span class="subscript">/mo</span></h1>
            </div>
            <table class="table">
              <tr>
                <td>Unlimited Imgae Uploads</td>
              </tr>
              <tr class="active">
                <td>Responsive Design</td>
              </tr>
              <tr class="active">
                <td>Access Anywhere</td>
              </tr>
              <tr class="active">
                <td class ="extra">Unlimited Projects</td>
              </tr>
            </table>
          </div>
          <div class="panel-footer">
            <%= link_to  "Sign Up", new_user_registration_path, class: 'btn btn-primary sign-up' %>
          </div>
        </div> <!-- panel -->
      </div> <!-- col -->

    </div> <!-- row -->
  </div> <!-- container -->
